@using Plantilla.Infraestructura.Modelo.Correo;
@model PlantillaCorreoModel
<!DOCTYPE html>
<html lang="es">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>@Model.Titulo</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
	<style>
		body {
			background-color: #f8f9fa;
			display: flex;
			justify-content: center;
			align-items: center;
			height: 100vh;
		}

		.card {
			border-radius: 10px;
			box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
		}
	</style>
</head>
<body>

	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<div class="card text-center p-4">
					<div class="card-body">
						<h2 class="text-primary">@Model.Titulo</h2>
						<p class="text-muted">@Model.Mensaje</p>

						@if (!string.IsNullOrEmpty(Model.Codigo))
						{
							<div class="mb-3">
								<span class="fw-bold">CÃ³digo:</span> <span class="badge bg-info">@Model.Codigo</span>
							</div>
						}

						@if (!string.IsNullOrEmpty(Model.LinkAccion))
						{
							<div class="mb-3">
								<span class="fw-bold">Link:</span> <span class="badge bg-info">@Model.LinkAccion</span>
							</div>
						}

					</div>
				</div>
			</div>
		</div>
	</div>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
